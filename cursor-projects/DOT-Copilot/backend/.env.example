# =============================================================================
# DOT Copilot Backend - Environment Variables
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration (Required)
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dot_copilot?schema=public

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# JWT Authentication (Required)
# =============================================================================
# Use strong secrets in production (32+ characters, randomly generated)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# CORS Configuration
# =============================================================================
FRONTEND_URL=http://localhost:5173

# =============================================================================
# Email Service (Optional)
# =============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# EMAIL_FROM=noreply@example.com

# =============================================================================
# File Storage - AWS S3 (Optional)
# =============================================================================
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# =============================================================================
# File Storage - Azure Blob Storage (Optional)
# =============================================================================
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_STORAGE_CONTAINER=uploads

# =============================================================================
# Error Tracking - Sentry (Optional)
# =============================================================================
# SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# Azure Application Insights (Optional)
# =============================================================================
# APPINSIGHTS_INSTRUMENTATIONKEY=your-instrumentation-key
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# =============================================================================
# API Documentation
# =============================================================================
ENABLE_DOCS=true

# =============================================================================
# Push Notifications - Firebase Cloud Messaging (Optional)
# =============================================================================
# Get from Firebase Console > Project Settings > Cloud Messaging > Server Key
# FCM_SERVER_KEY=your-fcm-server-key

# =============================================================================
# SMS Notifications - Twilio (Optional)
# =============================================================================
# Get from Twilio Console > Account Info
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# Webhook Configuration (Optional)
# =============================================================================
# Max retries for webhook delivery (default: 3)
# WEBHOOK_MAX_RETRIES=3
# Retry delay in milliseconds (default: 1000)
# WEBHOOK_RETRY_DELAY_MS=1000

# =============================================================================
# Scheduled Tasks / Job Queue - Redis (Optional)
# =============================================================================
# Required for scheduled reports, reminders, and background jobs
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable specific features
# ENABLE_SMS_NOTIFICATIONS=true
# ENABLE_PUSH_NOTIFICATIONS=true
# ENABLE_WEBHOOKS=true
# ENABLE_SCHEDULED_REPORTS=true
